<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
     https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.2.1</version>
    <relativePath/>
  </parent>
  <groupId>org.deepinthink.magoko</groupId>
  <artifactId>magoko-build</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <properties>
    <spotless-maven-plugin.version>2.28.0</spotless-maven-plugin.version>
    <spotless-maven-plugin.skip>true</spotless-maven-plugin.skip>
    <google-java-format.version>1.15.0</google-java-format.version>
    <google-java-format.style>GOOGLE</google-java-format.style>
    <spotless.license-header.file>${project.basedir}/../../src/checkstyle/license-header.txt
    </spotless.license-header.file>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>com.diffplug.spotless</groupId>
        <artifactId>spotless-maven-plugin</artifactId>
        <version>${spotless-maven-plugin.version}</version>
        <configuration>
          <skip>${spotless-maven-plugin.skip}</skip>
          <java>
            <googleJavaFormat>
              <version>${google-java-format.version}</version>
              <style>${google-java-format.style}</style>
            </googleJavaFormat>
            <licenseHeader>
              <file>${spotless.license-header.file}</file>
            </licenseHeader>
          </java>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
